<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:orientation="vertical"
    android:paddingBottom="4dp">

    <!-- ПРОШУ ПРОВЕРИТЬ ВЁРСТКУ НА РАЦИОНАЛЬНОСТЬ (ВОЗМОЖНО Я НАМУДРИЛ С ПАРАМЕТРАМИ)
     P.S. На будущее решил сделать доп. LinearLayout для хедера -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="false"
            android:fontFamily="@font/ys_display_regular"
            android:paddingHorizontal="@dimen/standard_padding"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="@dimen/title_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/standard_padding"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/main_menu_buttons_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ys_display_regular"
            android:foreground="?attr/selectableItemBackground"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:letterSpacing="0.01"
            android:outlineProvider="none"
            android:text="@string/search"
            android:textAllCaps="false"
            android:textColor="@color/dark"
            android:textFontWeight="600"
            android:textSize="@dimen/title_size"
            app:cornerRadius="@dimen/main_menu_buttons_radius"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/main_menu_icon_padding"
            app:iconTint="@color/dark" />

        <Button
            android:id="@+id/button_library"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/main_menu_buttons_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ys_display_regular"
            android:foreground="?attr/selectableItemBackground"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:letterSpacing="0.01"
            android:outlineProvider="none"
            android:text="@string/media_library"
            android:textAllCaps="false"
            android:textColor="@color/dark"
            android:textFontWeight="600"
            android:textSize="@dimen/title_size"
            app:cornerRadius="@dimen/main_menu_buttons_radius"
            app:icon="@drawable/media_library"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/main_menu_icon_padding"
            app:iconTint="@color/dark" />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/main_menu_buttons_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/ys_display_regular"
            android:foreground="?attr/selectableItemBackground"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:letterSpacing="0.01"
            android:outlineProvider="none"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textColor="@color/dark"
            android:textFontWeight="600"
            android:textSize="@dimen/title_size"
            app:cornerRadius="@dimen/main_menu_buttons_radius"
            app:icon="@drawable/settings"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/main_menu_icon_padding"
            app:iconTint="@color/dark" />
    </LinearLayout>

</LinearLayout>