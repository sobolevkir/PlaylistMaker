<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonScreenStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- Text Styles -->
    <style name="YS_Medium_22">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="YS_Medium_19">
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="YS_Medium_14">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="YS_Regular_16">
        <item name="android:textSize">@dimen/enlarged_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="YS_Regular_11">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>


    <!-- Headers Styles -->
    <style name="HeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="HeaderButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">?attr/colorOnBackground</item>
    </style>

    <style name="HeaderTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:clickable">false</item>
        <item name="android:textAppearance">@style/YS_Medium_22</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>


    <!-- Menu Styles -->
    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginVertical">@dimen/mini_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">?attr/colorOnBackground</item>
        <item name="android:textAppearance">@style/YS_Medium_22</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimaryFixedVariant</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">?attr/colorOnPrimaryFixedVariant</item>
    </style>

    <style name="SettingsMenuItemStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/standard_padding</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/YS_Regular_16</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
    </style>


    <!-- Search Field Styles -->
    <style name="SearchTextFieldStyle">
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:background">@drawable/rounded_search_field</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">200</item>
        <item name="android:inputType">text</item>
        <item name="android:textAppearance">@style/YS_Regular_16</item>
        <item name="android:textColor">?attr/colorOnPrimaryFixedVariant</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:drawableStart">@drawable/search_field_icon</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
    </style>

    <style name="SearchFrameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginVertical">@dimen/mini_padding</item>
        <item name="android:layout_marginHorizontal">@dimen/standard_padding</item>
    </style>

    <style name="SearchClearButtonStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:src">@drawable/clear_icon</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>


    <!-- Error Styles -->
    <style name="ErrorMessageStyle">
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/YS_Medium_19</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="drawableTopCompat">@drawable/nothing_found</item>
        <item name="android:drawablePadding">@dimen/standard_padding</item>
    </style>

    <!-- Button Styles -->
    <style name="SmallButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">91dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:backgroundTint">?attr/colorOnBackground</item>
        <item name="android:textAppearance">@style/YS_Medium_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">@dimen/radius_large</item>
    </style>

</resources>