<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScreenCommonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="HeaderButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">?attr/colorOnBackground</item>
    </style>

    <style name="HeaderTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:clickable">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginVertical">@dimen/mini_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">?attr/colorOnBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimaryFixedVariant</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">?attr/colorOnPrimaryFixedVariant</item>
    </style>

    <style name="SettingsMenuItemStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_button_height</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:paddingHorizontal">@dimen/standard_padding</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/enlarged_text_size</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SearchFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/search_field_height</item>
        <item name="android:layout_marginHorizontal">@dimen/standard_padding</item>
        <item name="android:layout_marginVertical">@dimen/mini_padding</item>
        <item name="android:background">@drawable/rounded_search_field</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">200</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">?attr/colorOnPrimaryFixedVariant</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
    </style>

</resources>