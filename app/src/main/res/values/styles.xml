<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderTextStyle">
        <item name="android:clickable">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginVertical">@dimen/main_menu_buttons_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="cornerRadius">@dimen/main_menu_buttons_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_menu_icon_padding</item>
        <item name="iconTint">@color/dark</item>
    </style>

    <style name="SettingsMenuItemStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_menu_buttons_height</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/standard_padding</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/settings_menu_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/icon_grey</item>
    </style>

    <style name="MySwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_menu_buttons_height</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/standard_padding</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/settings_menu_text_size</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="thumbTint">@color/icon_grey</item>
        <item name="trackTint">@color/switch_light_grey</item>
    </style>
</resources>