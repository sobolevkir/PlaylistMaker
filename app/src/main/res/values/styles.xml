<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonScreenStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- Text Styles -->
    <style name="YS_Medium_22">
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="YS_Medium_19">
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="YS_Medium_14">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="YS_Regular_16">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="YS_Regular_13">
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="YS_Regular_12">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="YS_Regular_11">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>


    <!-- Bar Styles -->
    <style name="ToolbarWithBackButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="titleTextAppearance">@style/YS_Medium_22</item>
        <item name="titleTextColor">?attr/colorOnBackground</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="navigationIconTint">?attr/colorOnBackground</item>
    </style>

    <style name="ToolbarSimpleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="titleTextAppearance">@style/YS_Medium_22</item>
        <item name="titleTextColor">?attr/colorOnBackground</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabBackground">?attr/colorOnPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="YS_Medium_14">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomNavigationView">
        <item name="itemIconTint">@color/bottom_colors</item>
        <item name="itemTextColor">@color/bottom_colors</item>
        <item name="itemTextAppearanceActive">@style/YS_Regular_11</item>
        <item name="itemTextAppearanceInactive">@style/YS_Regular_11</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:background">@drawable/bg_bottom</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Menu Styles -->

    <style name="SettingsMenuItemStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/standard_indent</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/YS_Regular_16</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
    </style>


    <!-- Search Field Styles -->
    <style name="SearchTextFieldStyle">
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:background">@drawable/bg_rounded_edit_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">200</item>
        <item name="android:inputType">text</item>
        <item name="android:textAppearance">@style/YS_Regular_16</item>
        <item name="android:textColor">?attr/colorOnPrimaryFixedVariant</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:drawableStart">@drawable/ic_search_field</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
    </style>

    <style name="SearchFrameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">@dimen/mini_indent</item>
        <item name="android:layout_marginBottom">@dimen/standard_indent</item>
        <item name="android:layout_marginHorizontal">@dimen/standard_indent</item>
    </style>

    <style name="SearchClearButtonStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:src">@drawable/ic_clear</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>


    <!-- Error and Special Features Styles -->
    <style name="ErrorMessageStyle">
        <item name="android:layout_marginTop">@dimen/special_element_top_indent</item>
        <item name="android:layout_marginHorizontal">@dimen/large_indent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/YS_Medium_19</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="drawableTopCompat">@drawable/nothing_found</item>
        <item name="android:drawablePadding">@dimen/standard_indent</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_marginTop">@dimen/special_element_top_indent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:indeterminateTint">?attr/colorAccent</item>
    </style>


    <!-- Button Styles -->
    <style name="SmallButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/small_element_height</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingHorizontal">@dimen/standard_indent</item>
        <item name="android:layout_marginTop">@dimen/large_indent</item>
        <item name="android:layout_marginBottom">@dimen/mini_indent</item>
        <item name="android:backgroundTint">?attr/colorOnBackground</item>
        <item name="android:textAppearance">@style/YS_Medium_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">@dimen/radius_large</item>
    </style>


    <!-- Player Styles -->
    <style name="SmallControlButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/small_control_btn_size</item>
        <item name="android:layout_height">@dimen/small_control_btn_size</item>
    </style>

    <style name="PlayControlButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/play_control_btn_size</item>
        <item name="android:layout_height">@dimen/play_control_btn_size</item>
    </style>

    <style name="TrackParameterTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/YS_Regular_13</item>
        <item name="android:textColor">?attr/colorPrimaryFixed</item>
        <item name="android:paddingHorizontal">@dimen/standard_indent</item>
    </style>

    <style name="TrackParameterValue">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textAppearance">@style/YS_Regular_13</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:paddingHorizontal">@dimen/standard_indent</item>
    </style>

</resources>