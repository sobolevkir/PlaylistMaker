<resources>

    <style name="PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/absolute_black</item>
        <item name="colorPrimaryVariant">@color/text_grey</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorOnPrimaryFixedVariant">@color/black</item>

        <item name="colorSecondary">@color/text_grey</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">?attr/colorPrimary</item>

        <item name="colorAccent">@color/blue</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="colorSwitchThumbNormal">@color/text_grey</item>
        <item name="android:colorForeground">?attr/colorSwitchThumbNormal</item>

        <item name="android:letterSpacing">0.01</item>

    </style>

    <style name="PlaylistMaker.MainScreen">

        <item name="android:colorBackground">?attr/colorAccent</item>
        <item name="colorOnBackground">?attr/colorOnPrimary</item>
        <item name="android:statusBarColor">?attr/colorAccent</item>
        <item name="android:navigationBarColor">?attr/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

    </style>

</resources>